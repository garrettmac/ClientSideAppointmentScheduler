<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1"
    android:backgroundTint="@color/abc_background_cache_hint_selector_material_dark"
    android:clickable="false">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Book Your Appointment!   "
        android:id="@+id/headerText"
        android:textSize="69dp"
        android:textIsSelectable="false"
        android:singleLine="false"
        android:textAlignment="center"
        android:nestedScrollingEnabled="false"
        android:inputType="text"

        android:layout_gravity="center_vertical" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:textSize="100dp"
        android:textFilterEnabled="false"
        android:smoothScrollbar="false"
        android:scrollingCache="false"
        android:textAlignment="@integer/abc_max_action_buttons" />

    <Spinner
        android:id="@+id/spinnerOfDays"
        android:prompt="@string/day_prompt"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:entries="@array/day_arrays"
        android:textSize="200dp"
        android:background="#49200b00"

        android:layout_gravity="top"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Book it!"
        android:id="@+id/connect"
        android:theme="@style/Base.TextAppearance.AppCompat.Button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/fromServer"
        android:id="@+id/textView" />
    <Button
        android:id="@+id/clear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Clear"/>
    <TextView
        android:id="@+id/response"
        android:text="From server: "
        android:textSize="25dp"
        android:layout_width="fill_parent"
        android:layout_height="500dp"/>

    <TextView
        android:id="@+id/textin"
        android:text="from client2: "
        android:textSize="25dp"
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:autoText="true" />
</LinearLayout>
